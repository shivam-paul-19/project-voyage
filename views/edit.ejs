<% layout('boilerplate.ejs') %>
<body>
    <div class="row col-8 offset-2">
        <h1>Create new listing</h1>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation">
            <div class="form-floating mb-3">
                <input type="text" name="listing[title]" id="title" class="form-control" placeholder="" value="<%= listing.title %>" required>
                <label for="title">Title</label>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Title required</div>
            </div>
            <div class="form-floating mb-3">
                <textarea name="listing[description]" id="desc" rows="10" cols="35" class="form-control" placeholder=""><%= listing.description %></textarea>
                <label for="desc">Description</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="image" placeholder="" class="form-control" name="listing[image][url]" value="<%= listing.image.url %>" required>
                <label for="location">Image URL</label>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Image URL required</div>
            </div>
            <div class="row g-2">
                <div class="form-floating mb-3 col-md-4">
                    <input type="number" id="price" placeholder="" class="form-control" name="listing[price]" value="<%= listing.price %>" required>
                    <label for="price">Price</label>
                    <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Price required</div>
                </div>
                <div class="form-floating mb-3 col-md-8">
                    <input type="text" id="country" placeholder="" class="form-control" name="listing[country]" value="<%= listing.country %>" required>
                    <label for="country">Country</label>
                    <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Country required</div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="location" placeholder="" class="form-control" name="listing[location]" value="<%= listing.location %>" required>
                <label for="location">Location</label>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Location required</div>
            </div>
            <button class="btn btn-dark" type="submit">Save changes</button>
        </form>
    </div>
</body>