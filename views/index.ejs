<% layout('boilerplate.ejs') %>
<body>
    <h1>All the listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2">
        <% for(let list of listings) { %>
            <div class="card col" style="width: 18rem;">
                <img src="<%= list.image.url %>" class="card-img-top" alt="Listing image" height="200px">
                <div class="card-body">
                  <div class="card-body-info">
                    <h5 class="card-title"><%= list.title %></h5>
                    <p>&#8377;<%= list.price.toLocaleString('en-IN') %></p>
                    <p class="card-text"><%= list.location %>, <%= list.country %></p>
                  </div><br>
                  <div class="card-body-btn">
                    <a href="/listings/<%= list._id %>" class="card-btn btn btn-primary">See Details</a>
                  </div>
                </div>
              </div>
        <% } %>
    </div>
</body>
