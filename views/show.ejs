<% layout('boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Listing Details</h1><br>
            <div class="card">
                <div class="col-5 offset-3">   
                    <img class="card-img-top show-img" src="<%= listing.image.url %>" alt=""><br>
                </div>
                <b><%= listing.title %></b><br>
                <%= listing.description %><br>
                &#8377;<%= listing.price.toLocaleString('en-IN') %><br>
                <%= listing.location %><br>
                <%= listing.country %><br><br>
                <a href="/listings/<%= listing._id %>/edit"><button class="btn btn-primary">Edit</button></a><br>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</body>